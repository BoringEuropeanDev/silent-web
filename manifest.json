{
  "manifest_version": 3,
  "name": "Silent Web",
  "version": "1.0.0",
  "description": "Block ads and 18+ content peacefully",
  
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  
  "host_permissions": ["<all_urls>"],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Silent Web"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ads_rules",
        "enabled": true,
        "path": "rules_ads.json"
      },
      {
        "id": "adult_rules",
        "enabled": false,
        "path": "rules_adult.json"
      }
    ]
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
